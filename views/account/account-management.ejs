<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<% if (locals.loggedin) { %>
  
  <div class="account-grid"> <div class="inventory-management-links"> 
      <h3>Welcome <%= locals.accountData.account_firstname %></h3>
      
      <ul class="account-links">
        <li>
          <a href="/account/update/<%= locals.accountData.account_id %>">Update Account Information</a>
        </li>
      </ul>
    </div>

    <% if (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin') { %>
      <div class="inventory-management-links">
        <h3>Inventory Management</h3>
        <ul class="account-links">
          <li>
            <a href="/inv/">Manage Inventory</a>
          </li>
        </ul>
      </div>
    <% } %>
  </div>
<% } %>